{% extends 'admin/base.html.twig' %}
{% block title %}
    Editace dokumentů
{% endblock %}

{% block heading %}
    Editace dokumentů
{% endblock %}

{% block body %}
    <div class="card shadow mb-4">
        <div class="card-body">
            {{ form_start(form) }}
            <div class="form-row">
                <div class="form-group col-md-9">
                    {{ form_label(form.title) }}
                    {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group col-md-3">
                    {{ form_label(form.public) }}
                    {{ form_widget(form.public, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group col-md-12">
                    {{ form_label(form.documents) }}
                    {{ form_widget(form.documents, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="row mb-4">
                {% for file in document.files %}
                    <div class="col text-center">
                        <div>
                            <a href="{{ asset(file.filePath) }}" target="_blank">
                                <img src="/assets/icons/files.svg" alt="fileIcon" style="width: 50px;">
                                <br>
                                {{ file.filename }}</a>
                            <br>
                        </div>
                        <a href="{{ path('app_admin_document_file_delete', {id: file.id}) }}" class="btn btn-danger text-center">
                            <i class="fas fa-trash fa-sm fa-fw text-gray-400"></i>
                            Smazat
                        </a>
                    </div>
                {% endfor %}
            </div>
            <button type="submit" class="btn btn-primary">Uložit dokumenty</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}